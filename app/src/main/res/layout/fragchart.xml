<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NPKh Chart"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/grafikHargaFrag"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearsatu"
        android:orientation="horizontal"
        android:layout_below="@+id/grafikHargaFrag">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nitrogenButon"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/sp_button_trans_rec"
            android:text="nitrogen"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phosphorousButton"
            android:layout_margin="5dp"
            android:background="@drawable/sp_button_trans_rec"
            android:text="fosfor"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kaliumButton"
            android:layout_margin="5dp"
            android:background="@drawable/sp_button_trans_rec"
            android:text="kalium"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kelembapanButton"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:background="@drawable/sp_button_trans_rec"
            android:text="kelembapan"/>

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_below="@+id/linearsatu"
        android:layout_height="match_parent"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/lineChartFrag"/>




</RelativeLayout>